{
  "name": "stl",
  "version": "0.0.1",
  "description": "Simple time lib",
  "author": "frdrks",
  "license": "MIT",
  "private": false,
  "main": "dist/stl.umd.js",
  "types": "dist/dts/index.d.ts",
  "scripts": {
    "build": "yarn build:lib &&  yarn build:dts",
    "build:lib": "webpack --config .webpack/config.js",
    "build:dts": "tsc --emitDeclarationOnly --outDir dist/dts/",
    "test": "yarn test:lint && yarn test:unit",
    "test:unit": "jest",
    "test:lint": "standard ./src/** ./src/**/** ./src/**/**/**"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/preset-typescript": "^7.6.0",
    "@types/jest": "^24.0.21",
    "@typescript-eslint/eslint-plugin": "^2.6.0",
    "@typescript-eslint/parser": "^1.13.0",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.0.6",
    "jest": "^24.9.0",
    "source-map-loader": "^0.2.4",
    "standard": "^14.3.1",
    "ts-jest": "^24.1.0",
    "typescript": "^3.6.4",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "resolutions": {
    "@babel/**/lodash": "^4.17.14"
  },
  "standard": {
    "parser": "@typescript-eslint/parser",
    "plugins": [ "@typescript-eslint/eslint-plugin" ]
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/(.*)\\.(test|spec))\\.(ts|js)x?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
